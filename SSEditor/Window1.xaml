<?xml version="1.0" encoding="utf-8"?>
<Window
	x:Class="SSEditor.Window1" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="SSEditor"
	Height="480"
	Width="560" xmlns:my="clr-namespace:SSEditor.ViewModel">
	<DockPanel
		LastChildFill="True">
		<TabControl>
			<TabItem
				Header="Class">
				<Grid>
					<Grid.Resources>
						<Style
							TargetType="my:NumericPair">
							<Setter
								Property="HorizontalAlignment"
								Value="Center" />
							<Setter
								Property="VerticalAlignment"
								Value="Center" />
						</Style>
					</Grid.Resources>
					<Grid.ColumnDefinitions>
						<ColumnDefinition
							Width="50" />
						<ColumnDefinition
							Width="50" />
						<ColumnDefinition
							Width="115" />
						<ColumnDefinition
							Width="115" />
						<ColumnDefinition
							Width="115" />
						<ColumnDefinition />
						<!--						<ColumnDefinition />
						<ColumnDefinition />
						<ColumnDefinition />-->
					</Grid.ColumnDefinitions>
					<Grid.RowDefinitions>
						<RowDefinition
							Height="*" />
						<!--						<RowDefinition
							Height="*" />-->
						<RowDefinition
							Height="90" />
						<RowDefinition
							Height="90" />
						<RowDefinition
							Height="90" />
						<RowDefinition
							Height="23" />
					</Grid.RowDefinitions>
					<ListBox
						x:Name="lstClass"
						Grid.Column="0"
						Grid.ColumnSpan="2"
						Grid.Row="0"
						Grid.RowSpan="4"
						HorizontalAlignment="Left"
						VerticalAlignment="Stretch"
						Margin="8,8,0,8"
						Width="84"></ListBox>
					<Button
						Content="新建"
						Grid.Column="0"
						Grid.Row="5"></Button>
					<Button
						Content="删除"
						Grid.Column="1"
						Grid.Row="5"></Button>
					<my:NumericPair
						Header="HP"
						Grid.Column="2"
						Grid.Row="1"
						HorizontalAlignment="Left"
						VerticalAlignment="Top" />
					<my:NumericPair
						Header="力量"
						Grid.Column="2"
						Grid.Row="2"
						HorizontalAlignment="Left"
						VerticalAlignment="Top" />
					<my:NumericPair
						Header="技术"
						Grid.Column="2"
						Grid.Row="3"
						HorizontalAlignment="Left"
						VerticalAlignment="Top" />
					<!--  -->
					<my:NumericPair
						Header="敏捷"
						Grid.Column="3"
						Grid.Row="1"
						HorizontalAlignment="Left"
						VerticalAlignment="Top" />
					<my:NumericPair
						Grid.Column="3"
						Grid.Row="2"
						HorizontalAlignment="Left"
						VerticalAlignment="Top"
						Header="魔力" />
					<my:NumericPair
						Grid.Column="3"
						Grid.Row="3"
						HorizontalAlignment="Left"
						VerticalAlignment="Top"
						Header="幸运" />
					<!--  -->
					<my:NumericPair
						Grid.Column="4"
						Grid.Row="1"
						HorizontalAlignment="Left"
						VerticalAlignment="Top"
						Header="守备" />
					<my:NumericPair
						Grid.Column="4"
						Grid.Row="2"
						HorizontalAlignment="Left"
						VerticalAlignment="Top"
						Header="魔防" />
					<my:NumericPair
						Grid.Column="4"
						Grid.Row="3"
						HorizontalAlignment="Left"
						VerticalAlignment="Top"
						Header="移动" />
				</Grid>
			</TabItem>
		</TabControl>
	</DockPanel>
</Window>