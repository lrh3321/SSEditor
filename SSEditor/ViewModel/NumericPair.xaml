<GroupBox x:Class="SSEditor.ViewModel.NumericPair"
          xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
          xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
          xmlns:my="clr-namespace:SSEditor.ViewModel"
          x:Name="rbroot"
>
	<Grid>
		<Grid.RowDefinitions>
		<RowDefinition Height="Auto"/>
		<RowDefinition Height="Auto"/>
		<RowDefinition Height="Auto"/>
		<RowDefinition/>
		</Grid.RowDefinitions>
		<my:NumericUpDown Grid.Row="0" LabelText="基础值:" HorizontalAlignment="Left" Width="100"  MaxValue="999"/><!-- Value="{Binding PropertyValue,ElementName=rbroot}"-->
		<my:NumericUpDown Grid.Row="1" LabelText="上  限:" HorizontalAlignment="Left" Width="100"  MaxValue="999" /><!--Value="{Binding PropertyLimit,ElementName=rbroot}"-->
		<my:NumericUpDown Grid.Row="2" LabelText="成长率:" HorizontalAlignment="Left" Width="100"  MaxValue="999" Increment="5" /><!--Value="{Binding GrowthRate,ElementName=rbroot}"-->
	</Grid>
</GroupBox>